{
  "name": "akio-horse-research",
  "version": "1.0.0",
  "description": "horse-research",
  "main": "electron/dist/main.js",
  "icon": "assets/icon",
  "scripts": {
    "start:front": "cd react-frontend && npm start",
    "start:back": "cd flask-backend && python app.py",
    "start:main": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:react && npm run build:flask && npm run build:electron && npm run package",
    "build:react": "cd react-frontend && npm run build",
    "build:flask": "cd flask-backend && pyinstaller --onefile app.py --name flask-app",
    "build:electron": "tsc -p electron/tsconfig.json",
    "package": "electron-builder -wml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tree-kill": "^1.2.2",
    "typescript": "^5.8.3"
  }
}
