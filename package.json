{
  "name": "akio-horse-searcher",
  "version": "1.0.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "extraResources": [
          {
            "from": "flask-backend/dist/flask-app.exe",
            "to": "flask-bin/flask-app.exe"
          }
        ],
        "icon": "assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "akio_horse_searcher"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin", "linux"]
        }
      ]
    }
  },
  "description": "AkioHorseSearcher",
  "main": "electron/dist/main.js",
  "scripts": {
    "start:front": "cd react-frontend && npm start",
    "start:back": "cd flask-backend && python app.py",
    "start:main": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:react && npm run build:flask && npm run build:electron && npm run package",
    "build:react": "cd react-frontend && npm run build",
    "build:flask": "cd flask-backend && pyinstaller --onefile app.py --name flask-app",
    "build:electron": "tsc -p electron/tsconfig.json",
    "package": "electron-forge package",
    "start": "electron-forge start",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "akio",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.0.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tree-kill": "^1.2.2",
    "typescript": "^5.8.3"
  }
}
